<%- include  partials/header  -%>

<h1>Compose</h1>

<form action="/compose" method="post">
  <div class="mb-3">
    <label for="titleCompose" class="form-label">Title</label>
    <input id="titleCompose" class="form-control" type="text" name="postTitle">
  </div>
  <div class="mb-3">
    <label for="postCompose" class="form-label">Post</label>
    <textarea id="postCompose" class="form-control" type="text" name="postBody" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Publish</button>
</form>

  
<%- include partials/footer -%> 